<h2>Register an application</h2>

<div class="row">
  <div class="col-md-4">
    <p>No naughty sites, please!</p>
  </div>

  <div class="col-md-8">
    <%= form_for @registered_application do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter your website's nickname" %>
      </div>
      <div class="form-group">
        <%= f.label :url %>
        <%= f.text_field :url, class: 'form-control', placeholder: "Enter your website's nickname" %>
      </div>
      <div class="form-group">
        <%= f.submit "Create", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
