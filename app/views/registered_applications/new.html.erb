<h2>Register an application</h2>

<div class="row">
  <% if @registered_application.errors.any? %>
    <div class="alert alert-danger">
      <h4> <%= pluralize(@registered_application.errors.count, "error") %> </h4>
      <ul>
        <% @registered_application.errors.full_messages.each do |error_msg| %>
          <li> <%= error_msg %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-8">
    <%= form_for @registered_application do |f| %>
    <%= form_group_tag(@registered_application.errors[:name]) do %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter your website's nickname" %>
        <% end %>
      <%= form_group_tag(@registered_application.errors[:url]) do %>
        <%= f.label :url %>
        <%= f.text_field :url, class: 'form-control', placeholder: "Enter your website's nickname" %>
      <% end %>
        <div class="form-group">
        <%= f.submit "Create", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
